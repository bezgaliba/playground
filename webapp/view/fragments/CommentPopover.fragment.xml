<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="myPopover"
		title="Tracking History of Checkbox"
		placement="Right"
		contentWidth="50%"
		contentMinWidth="100%"
		initialFocus="email">
        <List items="{dataModel>/Tracking}" sorter="{path: 'LastUpdatedOn', ascending: true}">
			<StandardListItem
				title="{dataModel>Comment}"
				description="{dataModel>LastUpdatedOn} by {dataModel>LastUpdatedBy}" />
		</List>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					id="closeBtn"
					text="Close"
					press="onPopoverCloseBtnPress" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>